{
	"info": {
		"_postman_id": "fantasynerds-api-collection",
		"name": "FantasyNerds Service API",
		"description": "Collection of endpoints for the FantasyNerds microservice",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Health Check",
			"item": [
				{
					"name": "API Health Check",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/health",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"health"
							]
						},
						"description": "Health check endpoint for the FantasyNerds service"
					},
					"response": []
				}
			],
			"description": "Endpoints to check the health status of the service"
		},
		{
			"name": "Lineups",
			"item": [
				{
					"name": "Get Lineups (Current Day)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/lineups",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"lineups"
							]
						},
						"description": "Get lineups for the current day. If no date parameter is provided, Fantasy Nerds returns the current day's lineups."
					},
					"response": []
				},
				{
					"name": "Get Lineups by Date",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/lineups?date={{date}}",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"lineups"
							],
							"query": [
								{
									"key": "date",
									"value": "{{date}}",
									"description": "Date in YYYY-MM-DD format"
								}
							]
						},
						"description": "Get lineups for a specific date. Date format: YYYY-MM-DD"
					},
					"response": []
				}
			],
			"description": "Endpoints related to team lineups"
		},
		{
			"name": "Depth Charts",
			"item": [
				{
					"name": "Get All Depth Charts",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/api/v1/depth-charts",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"v1",
								"depth-charts"
							]
						},
						"description": "Get depth charts for all NBA teams"
					},
					"response": []
				}
			],
			"description": "Endpoints related to team depth charts"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8001",
			"type": "string"
		},
		{
			"key": "date",
			"value": "2024-01-15",
			"type": "string"
		}
	]
}
